{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2018",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "pretty": true,
    "strict": true,
    "sourceMap": false,
    "downlevelIteration": true,
    "declaration": true,
    "declarationDir": "./types",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "./dist",

    "lib": [
      "esnext",
      "scripthost",
      "es5",
      "es2015",
      "es2015.promise",
      "es2017",
      "es2017.object",
      "es7"
    ],
    "types": ["node"],
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": ["*"]
      }
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
